% Removes section titles in headers while keeping the shading
\renewcommand{\insertnavigation}[1]{}

% tc and back color can be redefined in the .tex files. They must be in the .sty file, 
% otherwise it does not compile.
\definecolor{tc}{rgb}{0,0,0.6}  % Main text color
\colorlet{backcolor}{tc!10!white} % Background color

\setbeamercolor{section in head/foot}{bg=backcolor}
\setbeamercolor{title}{fg=tc}
\setbeamercolor{frametitle}{fg=tc}
\setbeamercolor{local structure}{fg=tc}
\setbeamercolor{structure}{fg=tc}
\setbeamercolor{footline}{fg=tc}

\useoutertheme[subsection=false]{miniframes}

\setbeamertemplate{frametitle}[default][center]

\AtBeginDocument{%
